@model AdminDetailViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}
<div class="bg-primary text-center "><h2>User's @Model.User.FullName Details</h2></div>
@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
<div>
    <form asp-action="UserDetails" method="post">
        <input type="hidden" name="Id" value="Model.User.Id" />
        <div class="form-group">
            <label asp-for="User.FullName"></label>
            <input asp-for="User.FullName" value="@Model.User.FullName" />

        </div>
        <div class="form-group">
            <label asp-for="User.UserName"></label>
            <input asp-for="User.UserName" value="@Model.User.UserName" />
        </div>
        <div class="form-group">
            <label asp-for="User.Email"></label>
            <input asp-for="User.Email" value="@Model.User.Email" />
        </div>
        <div class="form-group">
            <label asp-for="User.PhoneNumber"></label>
            <input asp-for="User.PhoneNumber" value="@Model.User.PhoneNumber" />
        </div>
        <div class="form-group">
            <label asp-for="User.IsActive"></label>
            <input type="checkbox" @*asp-for="User.IsActive"*@ value="@Model.User.IsActive"  @(Model.User.IsActive ? "checked=\"checked\"" : "") )/>
        </div>
        <div class="form-group">
            <label asp-for="AllRoles"></label>
            @foreach(IdentityRole role in Model.AllRoles)
            {
                <input type="checkbox" name="roles" value="@role.Name" 
                       @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")>
                            @role.Name<br />
            }
        </div>
</form>
    
</div>
<a class="btn btn-primary" asp-action="Index">Back to Users List</a>