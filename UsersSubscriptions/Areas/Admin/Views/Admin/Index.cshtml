@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}

<div class="bg-primary text-center"><h3>Users</h3></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <table class="table table-striped table-bordered text-center">
        <tr><th>FullName</th><th>UserName</th><th>Email</th><th>PhoneNumber</th><th>Is Active</th><th></th></tr>
        @foreach(var usr in Model)
        {
            <tr>
                <td>@usr.FullName</td>
                <td>@usr.UserName</td>
                <td>@usr.Email</td>
                <td>@usr.PhoneNumber</td>
                <td>@(usr.IsActive==true ? "Active" : "No")</td>
                <td>
                    <a asp-action="UserDetails" asp-route-Id="@usr.Id" class="btn btn-default">Details</a> 
                    <a asp-action="UserDeleting" asp-route-Id="@usr.Id" class="btn btn-danger">Delete User</a>
                </td>
            </tr>
        }
    </table>
</div>

