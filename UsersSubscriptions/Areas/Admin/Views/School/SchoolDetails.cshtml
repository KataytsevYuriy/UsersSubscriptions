@model School
@{
    Layout = "_AdminLayout";
    ViewData["Description"] = "Школа";
}

<div class="container">
    <form asp-action="SchoolDetails" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <ul class="list-group">
            <li class="list-group-item">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="" />
            </li>
            <li class="list-group-item">
                <label asp-for="UrlName"></label>
                <input asp-for="UrlName" />
            </li>
            <li class="list-group-item">
                <label asp-for="Owner">Власник школи </label>
                <select name="OwnerId" class="form-control">
                    @if(ViewBag.owners != null)
                    {
                        foreach (var owner in ViewBag.owners)
                        {
                            @if(Model.OwnerId == owner.Id)
                            {
                                <option value="@owner.Id" selected>@owner.FullName</option>
                            }
                            else
                            {
                                <option value="@owner.Id">@owner.FullName</option>
                            }
                        }
                    }
                </select>
            </li>
            <li class="list-group-item">
                <button class="btn-default btn" type="submit">Зберегти</button>
            </li>
        </ul>
    </form>
    <div>
        <p>Курси</p>
        @if (Model.Courses != null && Model.Courses.Count() > 0)
        {
            <ul class="list-group">
                @foreach (var cours in Model.Courses)
                {
                    <li class="list-group-item">
                        @if (cours.IsActive)
                        {
                            <i class="fas fa-check" style="color:green"> </i>
                        }
                        else
                        {
                            <i class="fas fa-times" style="color:red"> </i>
                        }

                        <a asp-action="CourseDetails" asp-route-id="@cours.Id"> @cours.Name</a>
                        <a asp-action="DeleteCourse" asp-route-id="@cours.Id" class=" text-danger float-right">Видалити</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>