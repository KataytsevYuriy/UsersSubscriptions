@model IEnumerable<School>
@{
    Layout = "_AdminLayout";
}
<div class="text-center"><h2>Школи</h2></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <table class="table table-bordered table-striped">
        <tr><th>Назва</th><th>Власник</th></tr>
        @if (Model.Count() > 0)
        {
            @foreach (var school in Model)
            {
                <tr>
                    <td><a asp-action="SchoolDetails" asp-route-id="@school.Id">@school.Name</a></td>
                    <td>@school.Owner?.FullName</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="2" class="text-center"><h3 class="text-danger">Школи відсутні</h3></td></tr>
        }
    </table>
</div>
<a asp-action="CreateSchool" class="btn btn-primary">Додати школу</a>