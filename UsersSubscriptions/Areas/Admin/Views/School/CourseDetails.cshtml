@model CourseDetailsViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Description"] = "Курс";
}

<div class="container">
    <form asp-action="UpdateCourse" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="SchoolId" value="@Model.SchoolId" />
        <ul class="list-group">
            <li class="list-group-item">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
            </li>
            <li class="list-group-item">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" />
            </li>
            <li class="list-group-item">
                <label asp-for="Price"></label>
                <input asp-for="Price" />
            </li>
            <li class="list-group-item" id="teachers">
                <p>Вчителі</p>
                @foreach (var teacher in Model.CourseAppUsers)
                {
                    <input type="checkbox" name="TeachersId" value="@teacher.AppUserId" checked />@teacher.AppUser.FullName
                    <br />
                }
            </li>
        </ul>
        <button type="submit" class="btn btn-light">Зберегти</button>
    </form>

</div>