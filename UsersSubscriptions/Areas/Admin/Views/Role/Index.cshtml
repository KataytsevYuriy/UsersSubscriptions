@model IEnumerable<IdentityRole>
@{
    Layout = "_AdminLayout";
    ViewData["Description"] = "Ролі";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <table class="table table-bordered table-striped">
        <tr><th>Назва</th><th></th></tr>
        @foreach(IdentityRole role in Model)
        {
            <tr>
                <td><a asp-action="RoleDetails" asp-route-id="@role.Id" class="">@role.Name</a></td>
                <td>
                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-outline-danger">Видалити</a>
                </td>
            </tr>
        }
    </table>
</div>
<a asp-action="CreateRole" class="btn btn-primary">Додати роль</a>