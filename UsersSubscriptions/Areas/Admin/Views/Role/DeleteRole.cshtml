@model IdentityRole
@{
    Layout = "_AdminLayout";
    ViewData["DescriptionDanger"] = "Видалення ролі - " +Model.Name;
}
@if (ViewBag.roleUsers.Count > 0)
{
    <h2 class="text-danger"> Роль @Model.Name міє користувачів:</h2>
    @foreach (AppUser user in ViewBag.roleUsers)
    {
    <p><a asp-controller="User" asp-action="UserDetails" asp-route-id="@user.Id">User: @user.FullName </a></p> <br />
    }
    <h2> Будьласка спочатку видаліть корстувачів з ролі</h2>
}
else {
    <form asp-action="DeleteRole" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Видалити</button>
    </form>
}
