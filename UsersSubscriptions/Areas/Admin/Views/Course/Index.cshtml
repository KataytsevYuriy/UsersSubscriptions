@model IEnumerable<Course>
@{
    Layout = "_AdminLayout";
}
<div class="bg-primary text-center"><h3>Courses</h3></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <table class="table table-striped table-bordered text-center">
        <tr><th>Name</th><th>IsActive</th><th>Discription</th><th>Teachers</th><th></th></tr>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@(course.IsActive? "Active":"No")</td>
                <td>@course.Description </td>
                <td>
                    @foreach(var teacher in course.CourseAppUsers)
                    {
                        @teacher.AppUser.FullName <br>
                    }
                </td>
                <td>
                    <a asp-action="CourseDetails" asp-route-Id="@course.Id" class="btn btn-default">Details</a>
                    <a asp-action="DeleteCourse" asp-route-Id="@course.Id" class="btn btn-danger">Delete Course</a>
                </td>
            </tr>
        }
    </table>
</div>
<a asp-action="CreateCourse" class=" btn btn-primary">Create new Course</a>
