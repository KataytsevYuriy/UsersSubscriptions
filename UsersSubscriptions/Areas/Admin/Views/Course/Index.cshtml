@model IEnumerable<Course>
@{
    Layout = "_AdminLayout";
    ViewData["Description"] = "Курси";
}
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <table class="table table-striped table-bordered text-center">
        <tr><th>Назва</th><th>Активний</th><th>Ціна</th><th></th></tr>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    @course.Name
                    <br />
                    @if (course.IsActive)
                    {
                        <i class="fas fa-check" style="color:green"> </i>
                    }
                    else
                    {
                        <i class="fas fa-times" style="color:red"> </i>
                    }
                </td>
                <td>
                    @foreach(var teacher in course.CourseAppUsers)
                    {
                        @teacher.AppUser.FullName <br>
                    }
                </td>
                <td>@course.Price</td>
                <td>
                    <a asp-action="DeleteCourse" asp-route-Id="@course.Id" class="btn btn-outline-danger btn-sm">Видалити</a>
                </td>
            </tr>
        }
    </table>
</div>
