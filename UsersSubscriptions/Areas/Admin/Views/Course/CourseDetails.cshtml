@model CourseViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Description"] = "Курс " + Model.Name;
}
<div>
    <form asp-action="ChangeCourse" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <div class=" form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="form-group">
                <label>Вчителі:</label> <br />
                @foreach (var teacher in Model.AllTeachers)
                {
                    <input type="checkbox" name="NewTeachers" value="@teacher.Id"
                           @(Model.Teachers.Contains(teacher) ? "checked=\"checked\"" : "")>
                    @teacher.FullName <br />
                }
            </div>
        </div>
        <button type="submit" class="btn btn-default">Зберегти</button>
    </form>
</div>
