@model CourseViewModel
@{
    Layout = "_AdminLayout";
}
<div class="bg-primary text-center"><h3>Course @Model.Name  Details</h3></div>

<div>
    <form asp-action="ChangeCourse" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <div class=" form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="form-group">
                <label>Teachers:</label> <br />
                @foreach (var teacher in Model.AllTeachers)
                {
                    <input type="checkbox" name="NewTeachers" value="@teacher.Id"
                           @(Model.Teachers.Contains(teacher) ? "checked=\"checked\"" : "")>
                      @teacher.FullName <br />
                }
            </div>
        </div>
        <button type="submit" class="btn btn-default">Save changes</button>
    </form>
    <a asp-action="Index" class="btn btn-primary">Back to Courses List</a>
</div>
