@model Subscription
@{
    Layout = "_AdminLayout";
    ViewData["DescriptionDanger"] = "Видалити абонемент";
}

<div>
    Назва курсу:<span>@Model.Course.Name</span>
    <label asp-for="Course.Name"></label>
    <input asp-for="Course.Name" disabled class="form-control"/>
    <br />
    Місяць: <span>@Model.Month.ToString("MMMM/yyyy")</span>
    <br />
    Учень: <span>@Model.AppUser.FullName </span> 
</div>
<br />
<form asp-action="RemoveSubscription" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Видалити</button>
</form>
