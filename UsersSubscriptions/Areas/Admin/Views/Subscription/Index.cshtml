@model IEnumerable<Subscription>
@{
    Layout = "_AdminLayout";
}

<div class="bg-primary text-center"><h3>Subscriptions</h3></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <table class="table table-striped table-bordered text-center">
        <tr><th>User</th><th>Course Name</th><th>Price</th><th>Month</th><th>Payed to Teacher</th><th></th></tr>
        @foreach(var subs in Model)
        {
            <tr>
                <td>@subs.AppUser.FullName <br /> @subs.AppUser.UserName</td>
                <td>@subs.Course.Name</td>
                <td>@subs.Price</td>
                <td>@subs.Month.ToString("MMMM:yyyy") </td>
                <td>
                    @if (subs.PayedTo == null)
                    {
                        <span class="text-danger">No payed subscription</span>
                    }
                    else
                    {
                    @subs.PayedTo?.FullName <br /> @subs.PayedDatetime.ToString("dd:MMMM:yyyy")
                    }
                </td>
                <td>
                    <a asp-action="RemoveSubscription" asp-route-Id="@subs.Id" class="btn btn-danger" >Delete Subscription</a>
                </td>
            </tr>
        }
    </table>
</div>

