@model IEnumerable<Subscription>
@{
    Layout = "_AdminLayout";
    ViewData["Description"] = "Абонементи";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <table class="table table-striped table-bordered text-center">
        <tr><th>Користувач</th><th>Назва курсу/Місяц</th><th>Ціна/Оплачено</th><th></th></tr>
        @foreach (var subs in Model)
        {
            <tr>
                <td>@subs.AppUser.FullName </td>
                <td>@subs.Course.Name <br /> @subs.Month.ToString("MMMM:yyyy") </td>
                <td>
                    @subs.Price
                    <br />
                    @if (subs.PayedTo == null)
                    {
                        <span class="text-danger">Не сполачено </span>
                    }
                    else
                    {
                        @subs.PayedTo?.FullName <br /> @subs.PayedDatetime.ToString("dd:MMMM:yyyy")
                    }
                </td>
                <td>
                    <a asp-action="RemoveSubscription" asp-route-Id="@subs.Id" class="btn btn-outline-danger">Видалити</a>
                </td>
            </tr>
        }
    </table>
</div>

