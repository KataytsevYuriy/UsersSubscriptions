@model TeacherCoursesViewModel
@{
    Layout = "_TeacherLayout";
    DateTime currentDate = DateTime.Now;
    int sum = 0;
}

@*<div class="bg-primary text-info text-center"><h3>Курс @Model.CurrentCourse.Name</h3></div>*@
<form asp-action="CourseInfo">
    <div class="form-group">
        <label asp-for="@Model.CurrentCourse.Name"></label>
        <select name="Id" asp-for="CurrentCourse.Id" onchange="this.form.submit()">
            @foreach(var cour in Model.TeacherCourses)
            {
                if (cour.Id == Model.CurrentCourse.Id)
                {
                    <option value="@cour.Id" selected>@cour.Name</option>
                } else
                {
                    <option value="@cour.Id">@cour.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Month"></label>
        <select name="month" onchange="this.form.submit()">
            @for (int i = -1; i < 2; i++)
            {
                if (currentDate.AddMonths(i).Month == Model.Month.Month)
                {
                    <option selected value="@currentDate.AddMonths(i)">@currentDate.AddMonths(i).ToString("MMMM:yyyy")</option>
                }
                else
                {
                    <option  value="@currentDate.AddMonths(i)">@currentDate.AddMonths(i).ToString("MMMM:yyyy")</option>
                }
            }
        </select>
    </div>
</form>
<table class="table table-striped table-bordered">
    <tr><th>Ім'я</th><th>Телефон</th><th>Ціна</th></tr>
    @foreach (var stud in Model.Students)
    {
        sum += stud.Price;
        <tr>
            <td>@stud.StudentName</td>
            <td>@stud.Phone</td>
            <td>@stud.Price</td>
        </tr>
    }
    <tr><td colspan="2" class="text-right">Ітого</td><td>@sum</td></tr>
</table>
