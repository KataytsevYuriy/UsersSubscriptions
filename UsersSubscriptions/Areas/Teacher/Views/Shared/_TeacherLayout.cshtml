@{
    Layout = "_Layout";
}
<div>
    <partial name="_LoginPartial" />
    @if (User.IsInRole(Common.UsersConstants.user))
    {
        <a asp-area="" asp-controller="Home" asp-action="Index">Кабінет учня </a>
    }
    @if (User.IsInRole(Common.UsersConstants.teacher))
    {
        <a asp-area="Teacher" asp-controller="Teacher" asp-action="Index">Кабінет вчителя </a>
    }

    @if (User.IsInRole(Common.UsersConstants.admin))
    {
        <a asp-area="Admin" asp-controller="User" asp-action="Index"> Кабінет адміна </a>
    }


</div>
<div>
    <a asp-controller="Teacher" asp-action="Index" class="@GetClassForButton("Index")"> Відсканувати учня </a>
    <a asp-controller="Teacher" asp-action="TeacherCourses" class="@GetClassForButton("TeacherCourses")"> Ваші активні курси </a>
    
</div>
<div>
    @RenderBody()
</div>
@functions{
    string GetClassForButton(string action)
    {
        return "btn " + (ViewContext.RouteData.Values["action"] as string == action ? "btn-primary" : "btn-info");
    }
}