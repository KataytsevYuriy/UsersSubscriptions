    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div id="cameraVideo">
                <div id="area-cameras-list">
                </div>
                <video id="videoAvatar" style="width:100%;height:50%;"></video>
                <canvas id="canvas" class="d-none" style="width:100%;height:auto;"></canvas>
                <button id="snap">Сделать снимок</button>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" disabled id="modalAdd">Зберегти</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="modalCancel">
                Відмінити
