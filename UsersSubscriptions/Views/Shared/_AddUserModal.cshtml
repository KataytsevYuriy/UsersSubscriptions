<div class="modal" tabindex="-1" id="addPhoneModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Пошук клієнта</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label>Номер телефону</label>
                <input class="form-control phone-input" id="phoneInput" type="tel" placeholder="+38(___)___-__-__" />
                <div>
                    або
                </div>
                <label>Ім'я чи Прізвище</label>
                <input class=" form-control my-1 p-1" id="nameInput" />
                <div class="my-1">
                    <div class="alert text-center">
                        <div id="info" class="padding-5 pointer alert-danger my-1 display-none" ></div>
                        <div id="listUsers" class="display-none  padding-5 pointer" style="overflow:auto; max-height:242px"></div>
                    </div>
                </div>
                <div>
                    <button id="scanQR" class="btn float-left">Сканувати QrCode</button>
                    <button id="addByPhone" class="btn btn-info float-right" onclick="sendPhone()">Пошук</button>
                </div>
                <div class="d-none" id="cameraVideo">
                    <div id="area-cameras-list">
                    </div>
                    <video id="preview" style="width:100%;height:50%;"></video>
                </div>
            </div>
        </div>
    </div>
</div>
