
<div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                @if (string.IsNullOrEmpty(ViewBag.ConfirmMessage))
                {
                    <h5 class="modal-title text-danger" id="deleteModalLabel">Видалити?</h5>
                }
                else
                {
                    <h5 class="modal-title text-danger" id="deleteModalLabel">@ViewBag.ConfirmMessage</h5>
                }
                <button type="button" class="close" data-dismiss="modal" aria-label="clse">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Ви впевнені?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Відмінити</button>
                <button type="button" class="btn btn-danger" id="deleteButton">Видалити</button>
            </div>
        </div>
    </div>
</div>