@model IEnumerable<Course>
@{
    Layout = "_Layout";
}

<div class="text-center text-info"><h3>Мої курси</h3></div>
<div class="list-group">
    @foreach (Course course in Model)
    {
        <div class="list-group-item">
            <a asp-action="CourseInfo" asp-route-Id="@course.Id">@course.Name</a>
            @if (course.IsActive)
            {
                <i class="fas fa-check float-right" style="color:green"> </i>
            }
            else
            {
                <i class="fas fa-times float-right" style="color:red"> </i>
            }
        </div>
    }
</div>

