@model IEnumerable<Course>
@{
    Layout = "_Layout";
}

<div class="text-center text-info"><h3>Мої курси</h3></div>
<div class="list-group">
    @foreach (Course course in Model)
    {
        @if (course.IsActive)
        {
            <a class="list-group-item" asp-action="CourseInfo" asp-route-Id="@course.Id">@course.Name</a>
        }
    }
</div>

