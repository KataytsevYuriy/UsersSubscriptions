@model AppUser
@{
    Layout = "_StudentLayout";
}
@if (Model.IsActive)
{
    @if (string.IsNullOrEmpty(Model.PhoneNumber))
    {
        <div class="text-danger"> Будьласка додайте телефонний номер</div>
    }
 
}
else
{
    <div class="bg-danger text-center"> <h2>Ваш акаунт блоковано. Будьласка зв'яжiться з адмiністріцією</h2></div>
}
<div style="text-align:center;">
    <br />
    <p style="font-size:1.2em;">Ваш QR код для перевірки абонементу</p>
    <p>
        <a asp-action="DownloadFile" asp-route-id="@Model.Id" class="btn btn-primary">Завантажити</a>
    </p>
    <div>
        <img style="width:100%" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(ViewBag.LoadedQrFile))" />
    </div>
</div>

