@model School
@{
    Layout = "_Layout";
    int paymentTypesCount = 0;
    List<PaymentType> paymentTypes = new List<PaymentType>();
    if (Model.PaymentTypes?.Count() > 0)
    {
        paymentTypesCount = Model.PaymentTypes.Count();
        paymentTypes = Model.PaymentTypes.OrderBy(pt => pt.Priority).ToList();
    }
}

<div class="container">
    <div class="d-inline text-center">
        <div class="text-center" style="display:inline-block">
            <h2>Курси школи</h2>
        </div>
        <div class="float-right" style="display:inline-block">
            <button class="btn btn-sm " type="button" data-toggle="modal" data-target="#schoolSettings">
                <i class="fas fa-cog" style="color:gray"></i>
            </button>
        </div>

    </div>
    @if (Model.Courses.Count() > 0)
    {
        <div class="list-group">
            @foreach (var course in Model.Courses)
            {
                <div class="list-group-item">
                    <a asp-action="CourseDetails" asp-route-id="@course.Id" asp-route-schoolId="@Model.Id">@course.Name</a>
                    @if (course.IsActive)
                    {
                        <i class="fas fa-check float-right" style="color:green"> </i>
                    }
                    else
                    {
                        <i class="fas fa-times float-right" style="color:red"> </i>
                    }
                </div>
            }
        </div>
    }
    <div class="text-center mt-1">
        <a asp-action="AddCourse" asp-route-schoolId="@Model.Id" class="btn btn-outline-primary mt-2">Додати курс</a>
    </div>
</div>

<div class="modal" tabindex="-1" id="schoolSettings" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Налаштування</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="SchoolSettings" id="schoolSettings">
                    <input type="hidden" asp-for="@Model.Id" />
                    <table id="tablePT">
                        <tr><th>Пріоритет</th><th class="text-center">Назва</th><th></th></tr>
                        @if (paymentTypes.Count() > 0)
                        {
                            @for (int j = 0; j < paymentTypesCount; j++)
                            {
                                <tr id="formRow@(j)">
                                    <td>
                                        <select name="PaymentTypes[@j].Priority" class="form-control">
                                            @for (int i = 0; i < 11; i++)
                                            {
                                                if (paymentTypes[j].Priority == i)
                                                {
                                                    <option value="@i" selected>@i</option>
                                                }
                                                else
                                                {
                                                    <option value="@i">@i</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <input name="PaymentTypes[@j].Name" value="@paymentTypes[j].Name" class="form-control" />
                                        <input type="hidden" id="idformRow@(j)" name="PaymentTypes[@j].Id" value="@paymentTypes[j].Id" />
                                        <input type="hidden" name="PaymentTypes[@j].SchoolId" value="@paymentTypes[j].SchoolId" />
                                    </td>
                                    <td>
                                        <button class="btn btn-outline-danger" onclick="removeTabbleRow('formRow@(j)'); return false">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                    <input type="hidden" id="paymentTypesCount" value="@paymentTypesCount" />
                    <button type="submit" id="btnSubmit" class="d-none">submit</button>
                    <button type="button" class="btn btn-outline-success" id="addNewPayType">
                        <i class="fas fa-plus"></i>
                    </button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="modalUpdate">Зберегти</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="modalCancel">
                    Відмінити
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#modalUpdate").click(function () {
                $("#btnSubmit").click();
            });
        });
        function removeTabbleRow(ident) {
            //$("#" + ident).remove();
            $("#" + ident).addClass("d-none");
            $("#id" + ident).val("delete");
        }
        $(function () {
            $("#addNewPayType").click(function () {
                let count = parseInt($("#paymentTypesCount").val());
                $("#paymentTypesCount").val(count + 1);
                $("#tablePT > tbody").append(" <tr> <td><select name='PaymentTypes[" + count + "].Priority' class='form-control'>" +
                    "<option value='0'  >0</option>" +
                    "<option value='1' >1</option>" +
                    "<option value='2'selected >2</option>" +
                    "<option value='3' >3</option>" +
                    "<option value='4' >4</option>" +
                    "<option value='5' >5</option>" +
                    "<option value='6' >6</option>" +
                    "<option value='7' >7</option>" +
                    "<option value='8' >8</option>" +
                    "<option value='9' >9</option>" +
                    "<option value='10' >10</option>" +
                    "</select> </td> <td>" +
                    "<input name='PaymentTypes[" + count + "].Name' class='form-control'>" +
                    " </td> <td> </td> </tr>"
                );

            });
        });
    </script>
}