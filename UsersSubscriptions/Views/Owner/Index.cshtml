@model IEnumerable<School>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="container">
    @if (Model.Count() > 0)
    {
        <h2>Schools</h2>

        <div class="list-group">
            @foreach (var school in Model)
            {
                <a asp-action="SchoolInfo" asp-route-id="@school.Id" class="list-group-item">@school.Name</a>
            }
        </div>
    }
    else
    {
        <h2 class="text-center text-danger">У вас немає активних шкіл</h2>
           }
    </div>